{
  "manifest_version": 3,
  "name": "Keep Logged In",
  "version": "1.0",
  "description": "Keeps all tabs active to prevent timeouts and maintain login sessions",
  "permissions": [
    "tabs",
    "activeTab",
    "storage",
    "background",
    "notifications",
    "alarms"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Keep Logged In Settings"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
